Vagrant.configure("2") do |config|
  config.vm.box = "generic/oracle8"
 
  # Por falta de criatividade e excesso de bom gosto (rsrs)
  # o nome para máquina de labs será shinobi (Ref.: Naruto)
  config.vm.define :shinobi do |shi|
  end

  # Configuração dos Recursos Fisicos da Máquina Virtual
  config.vm.provider "libvirt" do |lv|
    lv.memory = 8192
    lv.cpus = 4
  end

end
